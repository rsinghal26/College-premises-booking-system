<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:elevation="200dp"
    android:padding="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#f2ecec"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/reasonReqdForBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason of booking"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dateBooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/timeBooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mike: "
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/ifMikeReqd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Projector: "
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/ifProjectorReqd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                />

            <TextView
                android:id="@+id/tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                />

            <TextView
                android:id="@+id/whatBooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="wBook"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/ontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on "
                 />

            <TextView
                android:id="@+id/forBooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="for"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/userReqdslot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>